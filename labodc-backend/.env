# Environment variables - NEVER commit this file
DB_HOST=localhost
DB_PORT=5432
DB_NAME=labodc
DB_USER=root
DB_PASSWORD=123123

# pgAdmin (nếu dùng Docker)
PGADMIN_EMAIL=admin@labodc.com
PGADMIN_PASSWORD=admin123
PGADMIN_URL=http://localhost:5050

# JWT Configuration (update these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
